<!-- res/layout/dialog_agreement_reminder.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="4dp"
        >

    <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户协议及隐私保护"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

    <TextView
            android:text="为了更好的保障您的合法权益，请您阅读并同意以下协议《用户协议》《隐私协议》"
            android:layout_width="250dp"
            android:layout_height="61dp"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="sans-serif"/>

    <com.google.android.material.button.MaterialButton
            app:theme="@style/Theme.MaterialComponents"
            android:id="@+id/button_ok"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="同意并继续"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:shapeAppearanceOverlay="@style/RoundedCornersButton"
            app:backgroundTint="@color/Argentina_blue"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:backgroundTint="@color/Argentina_blue"
            android:textColor="#000000"
            android:layout_gravity="center"
            app:cornerRadius="15dp"/>


    <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不同意"
            android:background="#00FFFFFF"
            android:textColor="#A2DCDCDC"
            android:textStyle="bold"
            app:cornerRadius="15dp"
            android:layout_gravity="center"
            android:textSize="16sp"/>

</LinearLayout>
